<Window x:Class="FACTOVA_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FACTOVA_Launcher"
        mc:Ignorable="d"
        Title="FACTOVA 실행기" 
        Icon="image/FACTOVA_Launcher.png"
        SizeToContent="Height" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Loaded="Window_Loaded"
        SnapsToDevicePixels="True">
    <Window.Resources>
        <!-- New Modern Button Style - Official LG Gray -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Shadow Layer -->
                            <Border x:Name="shadow" 
                                    CornerRadius="20"
                                    Margin="0,0,0,3"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="#4B4B4B" Offset="0.0" />
                                        <GradientStop Color="#2B2B2B" Offset="1.0" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <BlurEffect Radius="3"/>
                                </Border.Effect>
                            </Border>
                            <!-- Main Button -->
                            <Border x:Name="border" 
                                    CornerRadius="20"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="#9B9B9B" Offset="0.0" />
                                        <GradientStop Color="#7B7B7B" Offset="0.5" />
                                        <GradientStop Color="#5B5B5B" Offset="1.0" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="3" Direction="270" Opacity="0.4"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Color="#ABABAB" Offset="0.0" />
                                            <GradientStop Color="#8B8B8B" Offset="0.5" />
                                            <GradientStop Color="#6B6B6B" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="4" Direction="270" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Margin" Value="0,2,0,0"/>
                                <Setter TargetName="shadow" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Color="#4B4B4B" Offset="0.0" />
                                            <GradientStop Color="#5B5B5B" Offset="0.5" />
                                            <GradientStop Color="#6B6B6B" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Direction="270" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                                <Setter TargetName="shadow" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                                <Setter Property="Foreground" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Large Button Style for Normal Mode - LG Gray with bigger font -->
        <Style x:Key="NormalModeLargeButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="Padding" Value="30,20"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- BackupButtonStyle based on ModernButtonStyle - LG Red -->
        <Style x:Key="BackupButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Shadow Layer -->
                            <Border x:Name="shadow" 
                                    CornerRadius="20"
                                    Margin="0,0,0,3"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="#750014" Offset="0.0" />
                                        <GradientStop Color="#550004" Offset="1.0" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <BlurEffect Radius="3"/>
                                </Border.Effect>
                            </Border>
                            <!-- Main Button -->
                            <Border x:Name="border" 
                                    CornerRadius="20"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="#D02F58" Offset="0.0" />
                                        <GradientStop Color="#B51044" Offset="0.5" />
                                        <GradientStop Color="#950024" Offset="1.0" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="3" Direction="270" Opacity="0.4"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Color="#E03F68" Offset="0.0" />
                                            <GradientStop Color="#C52054" Offset="0.5" />
                                            <GradientStop Color="#A51034" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="4" Direction="270" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Margin" Value="0,2,0,0"/>
                                <Setter TargetName="shadow" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Color="#850014" Offset="0.0" />
                                            <GradientStop Color="#950024" Offset="0.5" />
                                            <GradientStop Color="#A50034" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Direction="270" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                                <Setter TargetName="shadow" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                                <Setter Property="Foreground" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DevLoadButtonStyle based on ModernButtonStyle - Light Gray -->
        <Style x:Key="DevLoadButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Shadow Layer -->
                            <Border x:Name="shadow" 
                                    CornerRadius="20"
                                    Margin="0,0,0,3"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="#58687C" Offset="0.0" />
                                        <GradientStop Color="#38485C" Offset="1.0" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <BlurEffect Radius="3"/>
                                </Border.Effect>
                            </Border>
                            <!-- Main Button -->
                            <Border x:Name="border" 
                                    CornerRadius="20"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="#C8D8EC" Offset="0.0" />
                                        <GradientStop Color="#A8B8CC" Offset="0.5" />
                                        <GradientStop Color="#8898AC" Offset="1.0" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="3" Direction="270" Opacity="0.4"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Color="#D8E8FC" Offset="0.0" />
                                            <GradientStop Color="#B8C8DC" Offset="0.5" />
                                            <GradientStop Color="#98A8BC" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="4" Direction="270" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Margin" Value="0,2,0,0"/>
                                <Setter TargetName="shadow" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Color="#68788C" Offset="0.0" />
                                            <GradientStop Color="#8898AC" Offset="0.5" />
                                            <GradientStop Color="#98A8BC" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Direction="270" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                                <Setter TargetName="shadow" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                                <Setter Property="Foreground" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition x:Name="LogViewerRow" Height="120"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border x:Name="TitleBar" Grid.Row="0" Background="#F0F0F0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" CornerRadius="5,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="image/FACTOVA_Launcher.png" Width="20" Height="20" Margin="5,0,0,0" VerticalAlignment="Center"/>

                    <TextBlock x:Name="TitleTextBlock" Grid.Column="1" Text="GMES2.0 Launcher" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,5" FontSize="14" FontWeight="Bold" MouseLeftButtonDown="TitleTextBlock_MouseLeftButtonDown"/>

                    <TextBlock x:Name="CurrentTimeTextBlock" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" />

                    <Button Grid.Column="3" Content="X" Width="30" Height="25" Background="Transparent" BorderThickness="0" Foreground="Gray" Click="CloseButton_Click" FontWeight="Bold"/>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Row="1">
                <!-- Normal Mode View -->
                <ScrollViewer x:Name="NormalModeView" VerticalScrollBarVisibility="Auto">
                    <UniformGrid x:Name="NormalButtonContainer" Columns="3" />
                </ScrollViewer>

                <!-- Developer Mode Tab View -->
                <TabControl x:Name="DevModeTabControl" Visibility="Collapsed" SelectionChanged="DevModeTabControl_SelectionChanged">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                            <ContentPresenter x:Name="ContentSite"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                ContentSource="Header"
                                                Margin="10,2"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="White" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter TargetName="Border" Property="Background" Value="LightGray" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    <TabControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </TabControl.ItemsPanel>
                    <TabItem x:Name="LoadTab">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <Button x:Name="DevLoadButton" Visibility="Collapsed" Margin="10" FontSize="14" Click="LaunchButton_Click"/>
                                <UniformGrid x:Name="DevLoadButtonContainer" Columns="2" />
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem x:Name="BackupTab">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <Button x:Name="DevBackupButton" Visibility="Collapsed" Margin="10" FontSize="14" Click="BackupButton_Click"/>
                                <UniformGrid x:Name="BackupButtonContainer" Columns="2" />
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem x:Name="PatchNotesTab">
                        <RichTextBox x:Name="PatchNotesTextBox" IsReadOnly="True" Margin="10" Background="White" Foreground="Black" Height="250" VerticalScrollBarVisibility="Auto"/>
                    </TabItem>
                    <TabItem x:Name="SettingsTab">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="10">
                                <GroupBox x:Name="LanguageGroupBox" Margin="0,5">
                                    <StackPanel Margin="5">
                                        <RadioButton x:Name="LangEngRadio" Content="English" IsChecked="True" Checked="Language_Changed"/>
                                        <RadioButton x:Name="LangKorRadio" Content="한국어" Margin="0,5,0,0" Checked="Language_Changed"/>
                                    </StackPanel>
                                </GroupBox>
                                <GroupBox x:Name="StartupGroupBox" Margin="0,10">
                                    <CheckBox x:Name="DevModeOnStartupCheck" Content="Start in Developer Mode" Margin="5" Checked="DevModeStartup_Changed" Unchecked="DevModeStartup_Changed"/>
                                </GroupBox>

                                <GroupBox x:Name="GmesVersionGroupBox" Header="GMES 버전" Margin="0,10">
                                    <StackPanel Margin="5">
                                        <RadioButton x:Name="Gmes2RadioButton" Content="GMES 2.0" IsChecked="True" Checked="GmesVersion_Changed"/>
                                        <RadioButton x:Name="Gmes1RadioButton" Content="GMES 1.0 ( 프로그램 실행 불가, 개발자 모드에서만 사용)" Margin="0,5,0,0" Checked="GmesVersion_Changed"/>
                                    </StackPanel>
                                </GroupBox>

                                <GroupBox x:Name="FeaturesGroupBox" Header="기능" Margin="0,10">
                                    <UniformGrid Rows="1" Margin="5">
                                        <Button x:Name="AddFolderButton" Content="폴더 추가" Margin="0,0,5,0" Click="AddFolderButton_Click"/>
                                        <Button x:Name="OpenFolderButton" Content="문서 바로가기" Margin="5,0,0,0" Click="OpenFolderButton_Click"/>
                                    </UniformGrid>
                                </GroupBox>

                                <GroupBox x:Name="FontSizeGroupBox" Header="폰트" Margin="0,10">
                                    <Border BorderBrush="LightBlue" BorderThickness="2" CornerRadius="5" Padding="10" Margin="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Button x:Name="FontSizeDecreaseButton" Grid.Column="0" Content="-" Width="50" Height="40" 
                                                    Background="#5B5B5B" Foreground="White" FontSize="24" FontWeight="Bold" 
                                                    Click="FontSizeDecrease_Click" Margin="0,0,10,0"/>
                                            

                                            <TextBlock x:Name="FontSizeTextBlock" Grid.Column="1" Text="30" FontSize="24" 
                                                       FontWeight="Bold" Foreground="DodgerBlue" VerticalAlignment="Center" 
                                                       HorizontalAlignment="Center" Width="50" TextAlignment="Center"/>
                                            

                                            <Button x:Name="FontSizeIncreaseButton" Grid.Column="2" Content="+" Width="50" Height="40" 
                                                    Background="#5B5B5B" Foreground="White" FontSize="24" FontWeight="Bold" 
                                                    Click="FontSizeIncrease_Click" Margin="10,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </GroupBox>
                            </StackPanel>

                            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,15,0,5">
                                <TextBlock x:Name="AssemblyInfoTextBlock" HorizontalAlignment="Center" Foreground="Gray" Margin="0,0,0,5" TextWrapping="Wrap" TextAlignment="Center"/>
                                <TextBlock Text="Original Author: 송재헌" HorizontalAlignment="Center" Foreground="Gray"/>
                                <TextBlock Text="© 2025. 김정환, 정해상. All rights reserved." HorizontalAlignment="Center" Foreground="Gray"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>

            <!-- Log Viewer -->
            <RichTextBox x:Name="LogTextBox" Grid.Row="2" Margin="5" IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
                         Background="Black" Foreground="White" BorderThickness="1" BorderBrush="LightGray"/>
        </Grid>
    </Border>
</Window>